<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <RelativeLayout
        android:id="@+id/rl_videoitem_bottom"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@drawable/tiao"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_videoitem_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:text="黄鹤楼送孟浩然之广陵.mp4"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_videoitem_delet"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/trash_can"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"/>

                <ImageView
                    android:id="@+id/iv_videoitem_repty"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/refresh"
                    android:layout_toLeftOf="@+id/iv_videoitem_delet"
                    android:layout_marginRight="18dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_videoitem_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_videoitem_delet"
                    android:layout_marginRight="16dp"
                    android:text="64%"
                    android:textSize="12dp"
                    android:textColor="#FFFFFF"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_videoitem_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正在下载"
                    android:textColor="#FFFFFF"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:layout_marginLeft="45dp"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_videoitem_bottom">

        <ImageView
            android:id="@+id/iv_videoitem_tu"
            android:layout_width="168dp"
            android:layout_height="match_parent"
            android:src="@drawable/pic2"
            android:layout_marginLeft="45dp"/>

        <TextView
            android:id="@+id/tv_videoitem_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="《黄鹤楼送孟浩然之广陵》"
            android:textSize="12dp"
            android:textColor="#FFFFFF"
            android:layout_toRightOf="@+id/iv_videoitem_tu"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


</RelativeLayout>
